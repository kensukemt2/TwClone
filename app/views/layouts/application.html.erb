<!DOCTYPE html>
<html>
  <head>
    <title>TwiClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
                <span class="sr-only">header</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">ツイッタークローン

              </a>
            </div>
            <div id="gnavi" class="collapse navbar-collapse">
              <ul>
                <%= link_to image_tag('HOME_GREY.png'), root_path %>
                <%= link_to image_tag('message_gray.png'), new_tw_clone_path %>
                <%= link_to image_tag('moment_grray.png'), tw_clones_path %>
              </ul>
            </div>
          </div>
        </nav>

      </header>
    <%= yield %>
    </div>

  <footer class="footer">
    <div class="container">
      <p class="text-muted">© 2015-2016 Copyright DIVE INTO CODE Corp.</p>
    </div>
  </footer>
  </body>
</html>
