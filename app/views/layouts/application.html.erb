<!DOCTYPE html>
<html>
  <head>
    <title>TwiClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
                <span class="sr-only">header</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">ツイッタークローン

              </a>
            </div>
            <div id="gnavi" class="collapse navbar-collapse">
              <ul>
                <li><%= link_to "ホーム", root_path %></li>
                <li><%= link_to "新規作成", new_tw_clone_path %></li>
                <li><%= link_to "つぶやき一覧", tw_clones_path %></li>
              </ul>
            </div>
          </div>
        </nav>

      </header>
    <%= yield %>
    </div>

  <footer class="footer">
    <div class="container">
      <p class="text-muted">© 2017-2018 Copyright Kensuke Matsumoto</p>
    </div>
  </footer>
  </body>
</html>
