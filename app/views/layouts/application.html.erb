<!DOCTYPE html>
<html>
  <head>
    <title>TwiClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
                <span class="sr-only">header</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">ツイッタークローン

              </a>
            </div>
            <div id="gnavi" class="collapse navbar-collapse">
              <ul>
                <%= link_to image_tag('HOME_GREY.png', {:class => "img-responsive",:mouseover => "HOME_BLUE.png"}), root_path %>
                <%= link_to image_tag('message_gray.png', {:class => "img-responsive",:mouseover => "message_blue.png"}), new_tw_clone_path %>
                <%= link_to image_tag('moment_glay.png', {:class => "img-responsive",:mouseover => "moment_blue.png"}), tw_clones_path %>
              </ul>
            </div>
          </div>
        </nav>

      </header>
    <%= yield %>
    </div>

  <footer class="footer">
    <div class="container">
      <p class="text-muted">© 2017-2018 Copyright Kensuke Matsumoto</p>
    </div>
  </footer>
  </body>
</html>
